<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Alert?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.photos.StockUserController">
    <children>
        <ToolBar nodeOrientation="LEFT_TO_RIGHT" prefHeight="53.0" prefWidth="800.0">
            <items>
                <Button mnemonicParsing="false" onAction="#logOut" text="Logout">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
            </items>
        </ToolBar>
        <Text layoutX="20.0" layoutY="100.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Stock User Dashboard">
            <font>
                <Font size="40.0" />
            </font>
        </Text>
        <ListView fx:id="photoListView" layoutX="20.0" layoutY="150.0" prefHeight="400.0" prefWidth="760.0" onMouseClicked="#openPhoto">
            <!-- Populate the ListView with stock photos in the controller -->
        </ListView>
        <Button layoutX="20.0" layoutY="560.0" mnemonicParsing="false" onAction="#switchToUserScene" text="View User Photos" />
    </children>
</AnchorPane>
